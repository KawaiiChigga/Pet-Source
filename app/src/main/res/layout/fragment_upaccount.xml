<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.petsource.upHomeFragments.UpAccountFragment">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/userpicture_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:id="@+id/profilepicture" />

    <Button
        android:text="Settings"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnFUpAccountSignOut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnFUpAccountSettings" />

    <Button
        android:text="Sign Out"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lblUpdateAccount"
        android:id="@+id/btnFUpAccountSignOut"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:onClick="signOut"/>

    <Button
        android:text="My Pets"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profilepicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/btnFUpAccountMyPets"
        android:onClick="gotoPetList"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_below="@+id/lblFUpAccountName"
        android:layout_alignLeft="@+id/lblFUpAccountName"
        android:layout_alignStart="@+id/lblFUpAccountName"
        android:id="@+id/lblFUpAccountEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/lblFUpAccountPhoneNum"
        android:layout_alignBottom="@+id/profilepicture"
        android:layout_alignLeft="@+id/lblFUpAccountEmail"
        android:layout_alignStart="@+id/lblFUpAccountEmail" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/lblFUpAccountName"
        android:layout_alignTop="@+id/profilepicture"
        android:layout_toRightOf="@+id/profilepicture"
        android:layout_toEndOf="@+id/profilepicture"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFUpAccountMyPets"
        android:layout_marginTop="20dp"
        android:id="@+id/staffRatingBar"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar" 
        android:layout_centerHorizontal="true"
        android:rating="2.5" />
</RelativeLayout>