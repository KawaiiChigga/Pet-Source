<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.user.petsource.AddPetActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/appbar_padding_top">

        <TextView
            android:text="Update"
            android:textSize="16pt"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="250dp"
            android:id="@+id/textView8" />


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="Address"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="47dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUpAccountStreet"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/txtUpAccountBirthdate" />

    <TextView
        android:text="Job"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtUpAccountBirthdate"
        android:layout_alignStart="@+id/txtUpAccountBirthdate"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/txtUpAccountJob" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/txtUpAccountCity" />

    <TextView
        android:text="City"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/txtUpAccountJob"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Birthdate"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtUpAccountStreet"
        android:layout_alignLeft="@+id/txtUpAccountStreet"
        android:layout_alignStart="@+id/txtUpAccountStreet" />

    <Button
        android:text="GO!"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:background="@color/colorPrimary"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:id="@+id/btnUpAccountGo" />


</RelativeLayout>