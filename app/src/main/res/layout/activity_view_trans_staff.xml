<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.petsource.ViewTransStaffActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            android:paddingTop="@dimen/appbar_padding_top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Shop History"
                    android:textSize="16pt"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="30dp"

                    android:id="@+id/lblTransStaffTitle"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="119dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/paw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="70dp"
        android:id="@+id/imageView3" />

    <TextView
        android:text="Cust Name"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:id="@+id/txtCustName" />

    <TextView
        android:text="Type"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="30dp"
        android:id="@+id/textView17" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:id="@+id/txtType"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/txtCustName"
        android:layout_alignStart="@+id/txtCustName" />

    <TextView
        android:text="Pet Name"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="30dp"
        android:id="@+id/textView19" />

    <TextView
        android:text="Trans Date"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView17"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView19"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignLeft="@+id/txtPetName"
        android:layout_alignStart="@+id/txtPetName"
        android:id="@+id/txtTransDate" />

    <TextView
        android:text="Price"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="30dp"
        android:id="@+id/textView23" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignRight="@+id/txtTransDate"
        android:layout_alignEnd="@+id/txtTransDate"
        android:id="@+id/txtPrice" />

    <TextView
        android:text="Status"
        android:textSize="10pt"
        android:textColor="#444545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="30dp"
        android:id="@+id/textView25" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:layout_alignTop="@+id/textView25"
        android:layout_alignLeft="@+id/txtPrice"
        android:layout_alignStart="@+id/txtPrice"
        android:id="@+id/txtStatus" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#444545"
        android:textColor="#FDBD15"
        android:textSize="10pt"
        android:id="@+id/txtPetName"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignLeft="@+id/txtType"
        android:layout_alignStart="@+id/txtType" />

    <Button
        android:text="DECLINE"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_shadow"
        android:id="@+id/btnDECLINE"
        android:layout_below="@+id/txtStatus"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <Button
        android:text="ACCEPT"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_shadow"
        android:id="@+id/btnACC"
        android:layout_below="@+id/txtStatus"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>
</RelativeLayout>
